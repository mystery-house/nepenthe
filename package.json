{
  "name": "nepenthe",
  "version": "0.1.0",
  "description": "A Lilypond Preprocessor",
  "main": "lib/nepenthe.js",
  "bin": "lib/cli.js",
  "repository": "https://github.com/tinpan-io/nepenthe",
  "homepage": "https://nepenthejs.com",
  "author": "Andy Chase <andychase@gmail.com>",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "argparse": "^2.0.1",
    "dateformat": "^4.5.1",
    "handlebars": "^4.7.7",
    "hasbin": "^1.2.3",
    "tmp": "^0.2.1",
    "yaml-front-matter": "^4.1.1"
  },
  "devDependencies": {
    "@types/argparse": "^2.0.10",
    "@types/jest": "^27.0.2",
    "@types/node": "^15.12.4",
    "@types/yaml-front-matter": "^4.1.0",
    "jest": "^27.2.4",
    "jsdoc": "^3.6.7",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "tsc --build src && chmod a+x lib/cli.js",
    "build:production": "tsc --project src/tsconfig.production.json && chmod a+x lib/cli.js",
    "build:check": "tsc --build --noEmit",
    "clean": "rm -rf lib/*",
    "dev": "ts-node src/cli.ts",
    "start": "node lib/cli.js",
    "start:break": "node --inspect-brk -r ts-node/register lib/cli.js",
    "start:debug": "node --inspect -r ts-node/register lib/cli.js"
  }
}

{
  "name": "nepenthe",
  "version": "0.1.0",
  "description": "A Lilypond Preprocessor",
  "main": "index.js",
  "repository": "https://github.com/tinpan-io/nepenthe",
  "homepage": "https://nepenthejs.com",
  "author": "Andy Chase <andychase@gmail.com>",
  "license": "MIT",
  "private": false,
  "dependencies": {
    "handlebars": "^4.7.7",
    "yaml-front-matter": "^4.1.1"
  },
  "devDependencies": {
    "@types/node": "^15.12.4",
    "jsdoc": "^3.6.7",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "build": "tsc",
    "build:check": "tsc --noEmit",
    "start": "node -r ts-node/register lib/cli.js",

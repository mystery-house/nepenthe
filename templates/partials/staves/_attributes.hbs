{{!-- This partial handles the formatting of any attributes defined for a part. --}}
\with {
    
    {{instrumentName this staveInfo=staveInfo}}
    
    {{#if (isTabStave staveInfo) }}
        stringTunings = #{{stringTuning staveInfo }} {{!-- TODO only if stave Type is 'tab'--}}
    {{/if}}
    {{!-- TODO support customTuning attribute for part helper--}}
    {{!-- Regular staves: Hide stringnumbering hints by default --}}
        \override StringNumber #'stencil = ##f           
        \override StringNumber #'transparent = ##t
        {{!-- Conditionally adds clef if defined and if staff type is 'default': --}}
        {{addClef this}}
}
